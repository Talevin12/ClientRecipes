<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/register_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scaleType="centerCrop"/>


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="WELCOME TO FOODIZ"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/register_LAYOUT_fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_EDIT_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:hint="Email"
            android:textColorHint="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <Spinner
            android:id="@+id/register_SPINNER_role"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/black"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_EDIT_Username"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:hint="Username"
            android:textColorHint="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_EDIT_avatar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:hint="Avatar"
            android:textColorHint="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_IMG_chef"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/img_chef"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_LAYOUT_fields"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_BTN_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:textSize="28dp"
        android:backgroundTint="@color/black"
        android:text="Register!"/>

</RelativeLayout>